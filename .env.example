# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Development (SQLite)
# DATABASE_URL="file:./dev.db"

# Production (PostgreSQL)
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# Vercel Postgres Example:
# DATABASE_URL="postgres://default:xxxxx@xxxxx.postgres.vercel-storage.com:5432/verceldb?sslmode=require"

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-min-32-chars-generate-with-openssl"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Evolution Future"

# ===========================================
# EMAIL SERVICE
# ===========================================
# SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# AWS SES (Alternative)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_SES_FROM_EMAIL="noreply@yourdomain.com"

# ===========================================
# CLOUD STORAGE
# ===========================================
# AWS S3
AWS_S3_BUCKET="your-bucket-name"
AWS_S3_REGION="us-east-1"
AWS_S3_ACCESS_KEY_ID="your-s3-access-key"
AWS_S3_SECRET_ACCESS_KEY="your-s3-secret-key"

# Cloudinary (Alternative)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# PAYMENT INTEGRATION
# ===========================================
# Stripe
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Sentry
SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"
SENTRY_AUTH_TOKEN="your-auth-token"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_REFERRAL="true"
NEXT_PUBLIC_ENABLE_ONBOARDING="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="info"  # debug, info, warn, error

# ===========================================
# REDIS (Optional - for caching)
# ===========================================
# REDIS_URL="redis://localhost:6379"
